<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/sport_deatail_player_stat_name_column"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/match_detail_data_player_stat_value_column_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/match_detail_data_player_stat_label_row_height"
        android:background="#FFcccccc"
        android:orientation="vertical">

        <View
            style="@style/CommonListHorizontalDivider"
            />

        <View
            android:id="@+id/left_border"
            android:visibility="gone"
            style="@style/CommonListVerticalDivider"/>

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/match_detail_data_player_stat_label_row_height"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/match_detail_data_player_stat_label_text_size"/>

        <View
            style="@style/CommonListHorizontalDivider"
            android:layout_alignParentBottom="true"
            />

        <View
            style="@style/CommonListVerticalDivider"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <include layout="@layout/sport_detail_data_player_stat_value_item"/>

