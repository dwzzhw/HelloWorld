<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activity.MiscTestActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports Test Page" />

    <TextView
        android:id="@+id/bbs_board"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/title" />

    <Button
        android:id="@+id/misc_test_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bbs_board"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="Test 01"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/misc_test_01"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="RxJava Test"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/misc_test_01"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btn_rxjava"
        android:onClick="onBtnClicked"
        android:text="String Test"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/misc_test_01"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btn_string"
        android:onClick="onBtnClicked"
        android:text="Sort Test"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_ipc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_rxjava"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="IPC Test"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_kotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_rxjava"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btn_ipc"
        android:onClick="onBtnClicked"
        android:text="Kotlin Test"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_rxjava"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btn_kotlin"
        android:onClick="onBtnClicked"
        android:text="Storage Test"
        android:textAllCaps="false" />

    <RelativeLayout
        android:id="@+id/mibrowser_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ipc"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/mibrowser_debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/mibrowser_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mibrowser_debug"
            android:hint="Check to start debug package" />

        <Button
            android:id="@+id/btn_mibrowser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mibrowser_url"
            android:layout_marginTop="5dp"
            android:onClick="onBtnClicked"
            android:text="Start Mi Browser"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_check_intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mibrowser_url"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/btn_mibrowser"
            android:onClick="onBtnClicked"
            android:text="Check Intent"
            android:textAllCaps="false" />

    </RelativeLayout>

</RelativeLayout>
