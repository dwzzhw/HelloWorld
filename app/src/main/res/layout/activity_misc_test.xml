<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".activity.MiscTestActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sports Test Page"/>

    <TextView
        android:id="@+id/bbs_board"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/title"/>

    <Button
        android:id="@+id/misc_test_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bbs_board"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="Test 01"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_rxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/misc_test_01"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="RxJava Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_rxjava"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="String Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="Sort Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_ipc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="IPC Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_kotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="Kotlin Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="Storage Test"
        android:textAllCaps="false"/>
</LinearLayout>
