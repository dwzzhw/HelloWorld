<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UI Related Test Page" />

    <com.example.loading.helloworld.CountDownCircleBar
        android:id="@+id/counting_bar"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@id/title" />

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background="#22ff0000" />

    <EditText
        android:id="@+id/text_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/counting_bar"
        android:layout_marginTop="20dp"
        android:text="@string/hello_world"
        android:textAllCaps="false"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_test"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_surface_view_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:onClick="onBtnClicked"
                android:text="SurfaceView Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_lottie_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_surface_view_test"
                android:layout_marginTop="10dp"
                android:onClick="onBtnClicked"
                android:text="Lottie Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_view_draw_order_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_lottie_test"
                android:layout_marginTop="2dp"
                android:onClick="onBtnClicked"
                android:text="View Draw Order Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_constraint_layout_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_view_draw_order_test"
                android:layout_marginTop="2dp"
                android:onClick="onBtnClicked"
                android:text="Constraint Layout Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_coordinator_layout_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_constraint_layout_test"
                android:layout_marginTop="2dp"
                android:onClick="onBtnClicked"
                android:text="Coordinator Layout Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_lifecycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_coordinator_layout_test"
                android:layout_marginTop="2dp"
                android:onClick="onBtnClicked"
                android:text="Fragment lifecycle Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_memory_monitor_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_lifecycle"
                android:layout_marginTop="2dp"
                android:onClick="onBtnClicked"
                android:text="Memory Monitor Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/recycler_view_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_memory_monitor_test"
                android:layout_marginTop="2dp"
                android:onClick="onBtnClicked"
                android:text="Recycler View Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/notification_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycler_view_test"
                android:layout_marginTop="2dp"
                android:onClick="onBtnClicked"
                android:text="Notification View Test"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/webview_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notification_test"
                android:layout_marginTop="2dp"
                android:onClick="onBtnClicked"
                android:text="Web View Test"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/base_comp_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/webview_test"
                android:layout_marginTop="2dp"
                android:onClick="onBtnClicked"
                android:text="Base View Test"
                android:textAllCaps="false" />

            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/base_comp_test"
                android:layout_marginTop="20dp"
                android:background="#22ff0000" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
