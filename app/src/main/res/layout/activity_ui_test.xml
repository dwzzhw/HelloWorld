<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UI Related Test Page"/>

    <com.example.loading.helloworld.CountDownCircleBar
        android:id="@+id/counting_bar"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_below="@id/title"/>

    <ImageView
        android:id="@+id/img_view"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:background="#22ff0000"
        android:layout_height="100dp" />

    <EditText
        android:id="@+id/text_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/counting_bar"
        android:layout_marginTop="20dp"
        android:text="@string/hello_world"
        android:textAllCaps="false"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_surface_view_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_test"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="SurfaceView Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_lottie_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_surface_view_test"
        android:layout_marginTop="10dp"
        android:onClick="onBtnClicked"
        android:text="Lottie Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_view_draw_order_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_lottie_test"
        android:layout_marginTop="2dp"
        android:onClick="onBtnClicked"
        android:text="View Draw Order Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_constraint_layout_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_view_draw_order_test"
        android:layout_marginTop="2dp"
        android:onClick="onBtnClicked"
        android:text="Constraint Layout Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_lifecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_constraint_layout_test"
        android:layout_marginTop="2dp"
        android:onClick="onBtnClicked"
        android:text="Fragment lifecycle Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_memory_monitor_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_lifecycle"
        android:layout_marginTop="2dp"
        android:onClick="onBtnClicked"
        android:text="Memory Monitor Test"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/recycler_view_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_memory_monitor_test"
        android:layout_marginTop="2dp"
        android:onClick="onBtnClicked"
        android:text="Recycler View Test"
        android:textAllCaps="false"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#22ff0000"/>

</RelativeLayout>
