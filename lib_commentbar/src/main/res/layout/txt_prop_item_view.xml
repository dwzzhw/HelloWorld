<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools">

    <!--<FrameLayout-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--android:layout_width="@dimen/comment_txt_prop_bar_item_size"-->
    <!--android:layout_height="@dimen/comment_txt_prop_bar_item_size">-->

    <com.tencent.qqsports.imagefetcher.view.RecyclingImageView
        android:id="@+id/txt_prop_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        app:roundAsCircle="true"
        tools:src="@drawable/default_image_team"/>

    <LinearLayout
        android:id="@+id/txt_prop_red_point_tips_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_prop_red_point_tips"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/txt_prop_item_view_rp_size"
            android:background="@drawable/shape_txt_prop_item_red_point_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/txt_prop_item_view_rp_padding_tb"
            android:paddingLeft="@dimen/txt_prop_item_view_rp_padding_lr_2"
            android:paddingRight="@dimen/txt_prop_item_view_rp_padding_lr_2"
            android:paddingTop="@dimen/txt_prop_item_view_rp_padding_tb"
            android:text="99"
            android:textColor="@color/white"
            android:textSize="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/txt_prop_lock_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_gift_lock_black"/>
    <!--</FrameLayout>-->
</merge>