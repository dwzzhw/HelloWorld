<?xml version="1.0" encoding="utf-8"?>
<com.tencent.qqsports.common.widget.ime.InputMethodEventView
    android:id="@+id/comment_panel_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/panel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clickable="true"/>

    <com.tencent.qqsports.commentbar.txtprop.CommentTxtPropControlBar
        android:id="@+id/prop_control_bar"
        android:layout_width="@dimen/comment_txt_prop_bar_item_width"
        android:layout_height="@dimen/comment_txt_prop_bar_height"
        android:layout_above="@id/panel_container"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:visibility="gone"
        app:fullScreenMode="true"/>

    <com.tencent.qqsports.commentbar.CommentControlBar
        android:id="@+id/control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/panel_container"
        android:layout_toLeftOf="@id/prop_control_bar"
        android:clickable="true"/>

</com.tencent.qqsports.common.widget.ime.InputMethodEventView>