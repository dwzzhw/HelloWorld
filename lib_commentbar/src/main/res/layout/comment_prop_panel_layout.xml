<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <View
        android:id="@+id/seperatorLine1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentTop="true"
        android:background="@color/text_color_gray_0"/>

    <TextView
        android:id="@+id/tips_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/seperatorLine1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="选择文字入场特效"/>

    <ImageView
        android:id="@+id/prop_preview_area"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tips_text"/>

    <TextView
        android:id="@+id/preview_txt"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tips_text"
        android:gravity="center"
        android:text="特效预览区"
        android:textColor="@color/gray_disable"
        android:textSize="30dp"/>

    <com.tencent.qqsports.common.widget.ViewPagerEX
        android:id="@+id/prop_list_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cb"
        android:layout_below="@id/prop_preview_area"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <com.tencent.qqsports.common.widget.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="20dp"
        app:fillColor="@color/blue_primary"/>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="80dp"
        android:layout_height="@dimen/face_cb_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/comment_btn_bg_color_blue_selector"
        android:clickable="true"
        android:contentDescription="@null"
        android:text="确认"
        android:textColor="@color/text_color_white"
        android:textSize="15dp"/>

    <!--</RelativeLayout>-->
</merge>