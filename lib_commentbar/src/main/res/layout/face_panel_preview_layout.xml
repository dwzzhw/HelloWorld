<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/face_tips_view_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:background="@drawable/diceng_emotion_image_highlight"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

    <ImageView
        android:id="@+id/face_preview_view"
        android:layout_width="@dimen/comment_face_panel_content_item_size"
        android:layout_height="@dimen/comment_face_panel_content_item_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        tools:src="@drawable/public_icon_emoji"/>

    <TextView
        android:id="@+id/face_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/face_preview_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="12dp"
        tools:text="得意地笑"/>

</RelativeLayout>
