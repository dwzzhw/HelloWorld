    <com.tencent.qqsports.imagefetcher.view.RecyclingImageView
        android:id="@+id/txt_preview_user_icon"
        android:layout_width="@dimen/txt_prop_preview_user_icon_size"
        android:layout_height="@dimen/txt_prop_preview_user_icon_size"
        app:placeholderImage="@drawable/default_portrait"
        app:roundAsCircle="true"/>

    <TextView
        android:id="@+id/txt_preview_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/txt_preview_user_icon"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/txt_preview_user_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="12dp"
        tools:text="回忆专用小马甲"/>

    <TextView
        android:id="@+id/txt_preview_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_preview_user_icon"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:lines="1"
        android:text=" "
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <!--</RelativeLayout>-->
</merge>
